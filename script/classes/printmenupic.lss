class printmenupic {
    property image;
    property highlight;
    property selectable;
    
    method printmenupic(icon_filename, icon_x1, icon_y1, icon_x2, icon_y2, highlight_filename, highlight_x1, highlight_y1, highlight_x2, highlight_y2, is_selectable_bool) {
        this.selectable = is_selectable_bool;
        if (this.selectable) {
            this.image = new ss_basesprite(icon_filename, __toint(icon_x1 * screenratio), __toint(icon_y1 * screenratio), 0, __toint(icon_x2 * screenratio), __toint(icon_y2 * screenratio));
            this.highlight = new printmenuhighlight(highlight_filename, highlight_x1, highlight_y1, highlight_x2, highlight_y2);
        }
        return null;
    }
    
    method initfull() {
        if (this.selectable) {
            this.image.initfull();
            this.image.add();
            this.image.show();
            this.highlight.initfull();
        }
        return null;
    }
    
    method cleanupfull() {
        if (this.image != null) {
            this.image.hide();
            this.image.remove();
            this.image.cleanupfull();
            this.image = null;
        }
        if (this.highlight != null) {
            this.highlight.cleanupfull();
            this.highlight = null;
        }
        return null;
    }
    
    method hide() {
        if (this.selectable) {
            this.image.hide();
            this.highlight.image.hide();
            this.highlight.lit = 0;
        }
        return null;
    }
    
    method show() {
        if (this.selectable) {
            this.image.show();
        }
        return null;
    }
    
    method check(mouse_x, mouse_y) {
        var var1;
        if (this.selectable) {
            var1 = this.highlight.check(mouse_x, mouse_y);
        }
        else {
            var1 = 0;
        }
        return var1;
    }
}