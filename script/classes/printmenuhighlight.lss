class printmenuhighlight {
    property image;
    property lit;
    
    method printmenuhighlight(filename, x1, y1, x2, y2) {
        this.image = new ss_basesprite(filename, __toint(x1 * screenratio), __toint(y1 * screenratio), 0, __toint(x2 * screenratio), __toint(y2 * screenratio));
        this.lit = 0;
        return null;
    }
    
    method initfull() {
        this.image.initfull();
        this.image.add();
        this.image.show();
        this.image.hide();
        return null;
    }
    
    method cleanupfull() {
        if (this.image != null) {
            this.image.hide();
            this.image.remove();
            this.image.cleanupfull();
            this.image = null;
        }
        return null;
    }
    
    method check(cursor_x, cursor_y) {
        //cursor_x = cursor_x * screenratio;
        //cursor_y = cursor_y * screenyratio;
        if ((((cursor_y > this.image.y1) && (cursor_y < this.image.y2)) && (cursor_x > this.image.x1)) && (cursor_x < this.image.x2)) {
            if (this.lit == 0) {
                this.image.show();
                this.lit = 1;
            }
        }
        else if (this.lit) {
            this.image.hide();
            this.lit = 0;
        }
        return this.lit;
    }
}