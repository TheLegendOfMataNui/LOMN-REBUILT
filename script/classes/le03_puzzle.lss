            gccharacter::settohunga(this.shu, rgba(0, 113, 58, 255), rgba(0, 113, 58, 255), scslosifoundation::stringtoidentifier("mkaa"));
            gccharacter::setinputstate(this.shu, scslosifoundation::stringtoidentifier("none"));
            gccharacter::switchanimation(this.shu, scslosifoundation::stringtoidentifier("d003"), -1);
        }
        else {
